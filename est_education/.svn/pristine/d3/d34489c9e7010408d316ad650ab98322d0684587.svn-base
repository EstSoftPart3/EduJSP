<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample">

	<!-- 샘플 - 목록 조회 -->
	<select id="selectSampleList" parameterType="hashmap" resultType="com.sample.vo.SampleVo">
		<![CDATA[
			SELECT 
				 MBR_SQ AS 'SMPL_NUM' 
			   , MBR_ID AS 'SMPL_TXT'
			FROM 
				 EDUCATION.TB_EST_MBR
			WHERE 
				 1=1
		]]>
		<if test="SMPL_NUM != NULL and SMPL_NUM != ''">
	    	MBR_SQ = #{SMPL_NUM}
	    </if>
	    <if test="SMPL_TXT != NULL and SMPL_TXT != ''">
	    	MBR_ID LIKE CONCAT('%', #{SMPL_TXT}, '%')
	    </if>
	</select>
	
</mapper>