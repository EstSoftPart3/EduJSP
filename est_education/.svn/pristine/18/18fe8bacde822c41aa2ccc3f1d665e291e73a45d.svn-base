	<%@ include file="/WEB-INF/jsp/comn/component/include-body.jspf"%>
	<script>
	
		var fileIndex = 1;
		
		//파일 추가버튼 클릭 이벤트
		$("#fileAdd_btn").on("click", function(){
			$("#fileIndex").append("<div><input class='btn btn-default btn-sm' type='file' name='file_"+(fileIndex++)+"'>"+"</button>"+" <button class='btn btn-danger btn-sm' type='button' id='fileDelBtn'>"+"삭제"+"</button></div>");
		});
		
		//파일 삭제 이벤트
		$(document).on("click","#fileDelBtn", function(){
			$(this).parent().remove();
			
		});
		
		var fileNoArry = new Array();
		var fileNameArry = new Array();
		
		//있던 파일 삭제 이벤트 처리
		function fn_del(value, name){
					
			var msg = confirm("삭제 하시겠습니까?"); 
			if (msg == true) { 
				
				fileNoArry.push(value);
				fileNameArry.push(name);
				
				$("#fileNoDel").attr("value", fileNoArry);
				$("#fileNameDel").attr("value", fileNameArry);
				$(document).on("click","#fileDel", function(){
					$(this).parent().remove();
					
				});
				alert("삭제 되었습니다."); 
				
			}

		}
	</script>
