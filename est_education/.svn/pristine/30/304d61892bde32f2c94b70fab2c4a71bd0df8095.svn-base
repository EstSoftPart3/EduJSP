	<select id="selectProjectSkillList" parameterType="hashmap" resultType="com.erp.admin.business.projectskill.vo.ErpProjectSkillVo">
		<![CDATA[
			SELECT 
				  EDUCATION.TB_EEP_PRJCT_SKL.PRJCT_SQ
				  ,EDUCATION.TB_EEP_PRJCT_SKL.SKILL_SQ
				  ,EDUCATION.TB_EST_SKILL.SKILL_TYP_NM
				  ,EDUCATION.TB_EST_SKILL.SKILL_TYP_DTL_NM
			FROM EDUCATION.TB_EEP_PRJCT_SKL, EDUCATION.TB_EST_SKILL
		]]>
		<where>
		   EDUCATION.TB_EEP_PRJCT_SKL.PRJCT_SQ = #{PRJCT_SQ}
		   <if test="MBR_SQ != NULL">
		    	AND EDUCATION.TB_EST_SKILL.SKILL_TYP_NM = #{SKILL_TYP_NM}
		    </if>
		   AND EDUCATION.TB_EEP_PRJCT_SKL.SKILL_SQ = EDUCATION.TB_EST_SKILL.SKILL_SQ
		</where>
	</select>
	
	<insert id="insertProjectSkill" parameterType="java.util.List" >
		INSERT INTO EDUCATION.TB_EEP_PRJCT_SKL( 
			PRJCT_SQ,
			SKILL_SQ
		) VALUES 
		<foreach collection="list" item="item" separator=" , "> 
		( 
			${item.prjctSq} 
			, ${item.SkillSq} 
		) 
		</foreach> 
	</insert>

	<update id="updateProjectSkill" parameterType="java.util.List" >
		UPDATE EDUCATION.TB_EEP_PRJCT_SKL
			SET
				SKILL_SQ = #{skillSq}
			WHERE PRJCT_SQ = #{prjctSq} IN
			<foreach collection="list" item="item" separator=" , "> 
			 ${item.SkillSq} 
			</foreach> 	
	</update>
	
	<delete id="deleteProjectSkill" parameterType="com.erp.admin.business.projectskill.vo.ErpProjectSkillVo" >
		DELETE
			FROM EDUCATION.TB_EEP_PRJCT_SKL
			WHERE PRJCT_SQ = #{prjctSq}
	</delete>
	
	<delete id="deleteProjectSkillAll" parameterType="java.util.List" >
		DELETE
		FROM EDUCATION.TB_EEP_PRJCT_SKL
		<where>
		<foreach collection="list" item="item" open="" close="" separator="OR">
			PRJCT_SQ=#{item.prjctSq}
		</foreach>
		</where>
	</delete>

</mapper>