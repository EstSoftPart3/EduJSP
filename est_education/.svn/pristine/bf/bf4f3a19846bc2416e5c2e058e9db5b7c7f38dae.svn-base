<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sampleBoardReply">
	
	<!-- 샘플 게시글 댓글 목록 -->
    <select id="sampleBoardReplyList" parameterType="hashmap" resultType="com.sampleBoard.vo.BoardSampleReplyVo">
        <![CDATA[
	        SELECT
	              REPLY_NO
	            , BNO
	            , REPLY_TEXT
	            , REPLY_WRITER
	            , REG_DATE
	        FROM 
	        	EDUCATION.TB_EST_SAMPLE_BORAD_REPLY
	        WHERE
	        	BNO = #{BNO}
	        ORDER BY REPLY_NO
        ]]>
    </select>
    
    <!-- 샘플 게시글 댓글 상세 -->
    <select id="sampleBoardReplyDetail" parameterType="com.sampleBoard.vo.BoardSampleReplyVo" resultType="com.sampleBoard.vo.BoardSampleReplyVo">
        <![CDATA[
	        SELECT
	              REPLY_NO
	            , BNO
	            , REPLY_TEXT
	            , REPLY_WRITER
	            , REG_DATE
	        FROM 
	        	EDUCATION.TB_EST_SAMPLE_BORAD_REPLY
	        WHERE
	        	REPLY_NO = #{replyNo} AND BNO = #{bno}
	        ORDER BY REPLY_NO
        ]]>
    </select>
     
    <!-- 샘플 게시판 댓글 작성 -->
    <insert id="sampleBoardReplyInsert" parameterType="com.sampleBoard.vo.BoardSampleReplyVo">
        <![CDATA[
            INSERT EDUCATION.TB_EST_SAMPLE_BORAD_REPLY
            (
               	  BNO
	            , REPLY_TEXT
	            , REPLY_WRITER
            )
            VALUES
            (
                  #{bno}
                , #{replyText}
                , #{replyWriter}
            )
        ]]>
    </insert>
    
    <!-- 샘플 게시판 댓글 수정 -->
    <update id="sampleBoardReplyUpdate" parameterType="com.sampleBoard.vo.BoardSampleReplyVo">
        <![CDATA[
            UPDATE
                EDUCATION.TB_EST_SAMPLE_BORAD_REPLY
            SET
                  REPLY_TEXT = #{replyText}
                , REG_DATE = NOW()
            WHERE
                REPLY_NO = #{replyNo} AND BNO = #{bno}
        ]]>
    </update>
    
    <!-- 샘플 게시판 댓글 삭제 -->
    <delete id="sampleBoardReplyDelete" parameterType="com.sampleBoard.vo.BoardSampleReplyVo">
        <![CDATA[
            DELETE FROM EDUCATION.TB_EST_SAMPLE_BORAD_REPLY
			WHERE REPLY_NO = #{replyNo}
        ]]>
    </delete>

</mapper>