<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login">

	<!-- 코드 그룹 - 목록 조회 -->
	<select id="loginMember" parameterType="hashmap" resultType="com.login.vo.LoginVo">
		
		SELECT 
		    MBR_ID,
  			MBR_PWD,
  			MBR_NM
		FROM EDU_JSP.TB_EST_MBR 
		<where>
			<if test="MBR_ID != NULL">
		    	AND MBR_ID = #{MBR_ID}
		    </if>
		    <if test="MBR_PWD != NULL">
		    	AND MBR_PWD = #{MBR_PWD}
		    </if>
	    </where>
	</select>
	
	
	

</mapper>