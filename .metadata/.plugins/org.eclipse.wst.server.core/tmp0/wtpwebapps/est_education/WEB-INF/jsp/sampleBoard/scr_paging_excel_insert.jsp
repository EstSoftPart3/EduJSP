	<script>
	
		//페이지 로딩시 함수 지정
	 	$(document).ready(function() {	
	 		
	 	});
	 	
		var fileIndex = 1;
		
		//파일 추가 취소 삭제 버튼활성화
		$("#fileAdd_btn").on("click", function(){
			$("#fileIndex").append( "<div>"
					               +  "<input class='btn btn-default btn-sm' style='width: 50%;' type='file' name='file_"+(fileIndex++)+"'>"+"</button>"
					               +  "<button class='btn btn-danger btn-sm' type='button' id='fileDelBtn'>"+"X"+"</button>"
					               +"</div>"
			);
		});
		
		//파일 삭제 이벤트
		$(document).on("click", "#fileDelBtn", function(){
			$(this).parent().remove();
		});
		
		//게시판 정보 저장 이벤트
		$("#insertBoardSample").on("click", function() {
			
			var title = $("#title").val();
			var writer = $("#writer").val();
			var content = $("#content").val();
			
			if(gfn_isNull(title)) {
				alert("게시판 제목을 입력해주세요.");
				return false;
			}else if(gfn_isNull(content)){
				alert("게시판 내용을 입력해주세요.");
				return false;
			}else{
				var comAjax = new ComAjax();
	            comAjax.setUrl("<c:url value='/erp/sample/sampleBoardInsert.do' />");
	            
	            comAjax.addParam("title", title);
	            comAjax.addParam("writer", writer);
	            comAjax.addParam("content", content);

	            comAjax.setCallback(fn_FileInsertCallBack);
	            comAjax.ajax();
			}
			
		});
		
		//게시판 정보 저장 후 게시판 파일첨부 저장 CALLBACK 이벤트
		function fn_FileInsertCallBack() {

			var form = $('#FileInsertForm')[0];
			var data  = new FormData(form);

   		    $.ajax({
   		        type: "POST",
   		        enctype: 'multipart/form-data',
   		        url: "/erp/sample/sampleBoardFileInsert.do",
   		        data: data,
   		        processData: false,
   		        contentType: false,
   		        cache: false,
   		        success: function (data) {
   		        	alert("게시판 등록이 완료 되었습니다.");
   		        	fn_sampleBoardListCallBack();
   		        },
   		        error: function (e) {
   		           
   		        }
   		    });

        }
		
		//게시판 파일첨부 저장 후 게시판 목록으로 CALLBACK 이벤트
		function fn_sampleBoardListCallBack() {
			
                alert("게시판 메인화면으로 돌아갑니다.");
                var comSubmit = new ComSubmit();
                comSubmit.setUrl("<c:url value='/erp/sample/sampleBoardPagingList.do'/>");
                comSubmit.submit();
                
        }
		
